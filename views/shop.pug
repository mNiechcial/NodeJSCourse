extends layouts/main-layout.pug 

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length >0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://i.redd.it/sjckn9n0hm241.png", alt="Book")
                        .card__content
                            h2.product__price $20.00
                            p.product__description Interesting
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products

                        
